<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:weightSum="100">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal|bottom"
        android:layout_weight="20">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOLSBB"
                android:id="@+id/textView"
                android:textColor="@color/volsbbtextcolor"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" l"
                android:id="@+id/textView2"
                android:textColor="@color/touchtextcolor"
                android:textSize="45sp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView"
                android:src="@drawable/notiicon2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="neTouch"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:textColor="@color/touchtextcolor"
                android:textSize="30sp"
                android:textStyle="bold" /></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:weightSum="100"
        android:layout_weight="20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Login"
            android:layout_weight="50"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:layout_weight="50">
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autologin"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Change Password"
            android:layout_weight="50"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView4" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="50" >

            <Button
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:text="Change"
                android:id="@+id/cpassbut"
                android:layout_height="32dp"
                android:textColor="@android:color/white"
                android:background="@drawable/refreshbutton"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Usage"
                android:gravity="center"
                android:layout_weight="50"
                android:id="@+id/datausage"

            android:textColor="@android:color/white"
            android:textSize="20sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="50">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_calendar_white"
            android:id="@+id/calendar"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Select Renewal Date)"
                android:textColor="@color/whitelight"
                android:textSize="10sp" />
            </LinearLayout>
            </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|center_vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 GB"
                android:layout_gravity="center_vertical"
                android:id="@+id/datatext"
                android:textColor="@android:color/white"
                android:textSize="40sp" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:id="@+id/progress_bar"/>

            </FrameLayout>
            <Button
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:text="REFRESH"
                android:id="@+id/refreshbut"
                android:layout_height="32dp"
                android:textColor="@android:color/white"
                android:background="@drawable/refreshbutton"/>


        </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Don't know renewal date?"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:id="@+id/renew_text"
                android:layout_marginBottom="15dp"
                android:textColor="@color/touchtextcolor"
                android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>